{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cognizone/ng-core": ["libs/ng-core/src/index.ts"],
      "@cognizone/model-utils": ["libs/model-utils/src/index.ts"],
      "@cognizone/application-profile": ["libs/application-profile/src/index.ts"],
      "@cognizone/devtools": ["libs/devtools/src/index.ts"],
      "@cognizone/ng-application-profile": ["libs/ng-application-profile/src/index.ts"],
      "@cognizone/elastic": ["libs/elastic/src/index.ts"],
      "@cognizone/transloco-langstring": ["libs/transloco-langstring/src/index.ts"],
      "@cognizone/ng-yasgui": ["libs/ng-yasgui/src/index.ts"],
      "@app/*": ["apps/docs-app/src/app/*"],
      "@env/*": ["apps/docs-app/src/environments/*"],
      "@cognizone/permissions": ["libs/permissions/src/index.ts"],
      "@cognizone/operation": ["libs/operation/src/index.ts"],
      "@cognizone/legi-cv": ["libs/legi-cv/src/index.ts"],
      "@cognizone/json-model-graph": ["libs/json-model-graph/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
