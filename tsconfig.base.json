{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cognizone/ng-core": ["libs/ng-core/src/index.ts"],
      "@cognizone/model-utils": ["libs/model-utils/src/index.ts"],
      "@cognizone/application-profile": ["libs/application-profile/src/index.ts"],
      "@cognizone/devtools": ["libs/devtools/src/index.ts"],
      "@cognizone/ng-application-profile": ["libs/ng-application-profile/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
